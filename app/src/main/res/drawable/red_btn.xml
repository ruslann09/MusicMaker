<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <gradient android:startColor="@color/redBtnStart" android:endColor="@color/redBtnEnd" android:type="radial" android:angle="90" android:gradientRadius="50dp" />
            <corners android:radius="5dp" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="@android:color/white" android:endColor="@color/redBtnWhite" android:type="radial" android:angle="90" android:gradientRadius="80dp" />
            <corners android:radius="5dp" />
        </shape>
    </item>
</selector>